<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionButton" parent="@style/Pretendard.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActionButton.Blue">
        <item name="android:background">@drawable/bg_btn_blue_selector</item>
        <item name="android:textColor">@color/color_text_white</item>
    </style>

    <style name="ActionButton.Green">
        <item name="android:background">@drawable/bg_btn_green_selector</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="ActionButton.Ghost">
        <item name="android:background">@drawable/bg_btn_transparent_grey2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionButton.Blue.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionButton.Green.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionButton.Ghost.Small">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>